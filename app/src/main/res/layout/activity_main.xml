<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/BookLogo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:contentDescription="TODO"
        android:src="@mipmap/libraryapplogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="MyBook"
        android:textColor="#E91E2F"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/BookLogo"
        app:layout_constraintStart_toStartOf="@+id/BookLogo"
        app:layout_constraintTop_toBottomOf="@+id/BookLogo"
        />

    <Button
        android:id="@+id/AllBooks"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="All Books"
        app:layout_constraintEnd_toEndOf="@+id/AppName"
        app:layout_constraintStart_toStartOf="@+id/AppName"
        app:layout_constraintTop_toBottomOf="@+id/AppName" />

    <Button
        android:id="@+id/Novels"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Novels"
        app:layout_constraintEnd_toEndOf="@+id/AllBooks"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/AllBooks"
        app:layout_constraintTop_toBottomOf="@+id/AllBooks" />

    <Button
        android:id="@+id/Manga"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Manga"
        app:layout_constraintEnd_toEndOf="@+id/Novels"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Novels"
        app:layout_constraintTop_toBottomOf="@+id/Novels" />

    <Button
        android:id="@+id/StudyBooks"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Study books"
        app:layout_constraintEnd_toEndOf="@+id/Manga"
        app:layout_constraintStart_toStartOf="@+id/Manga"
        app:layout_constraintTop_toBottomOf="@+id/Manga" />

    <Button
        android:id="@+id/About"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="About"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/StudyBooks"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/StudyBooks"
        app:layout_constraintTop_toBottomOf="@+id/StudyBooks" />

</androidx.constraintlayout.widget.ConstraintLayout>